<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style_search.css">
</head>

<body>
    <!-- Search for Songs -->
    <div class="search-section">
        <h1 class="search-title" style="color: #ffffff;">Search for Songs</h1>
        <form method="GET" action="/song" class="search-form">
            <input type="text" name="song" class="search-bar" placeholder="Search for a song...">
            <button type="submit" class="search-button">Search</button>
        </form>
    </div>

    <div class="container">
        <div class="d-flex flex-wrap justify-content-between">
            <!-- Song Results -->
            {{#if fiveSongs}}
            <div class="col-md-5">
                <h1 class="text-white mb-4">Top Songs</h1>
                <div class="song-results">
                    {{#each fiveSongs}}
                    <div class="card song-result mb-3 p-3">
                        <div class="d-flex align-items-center justify-content-between">
                            <!-- Left Section: Album Cover & Song Info -->
                            <div class="d-flex align-items-center">
                                <div class="album-cover me-3">
                                    <a href="{{this.uri}}">
                                        <img src="{{this.album.images.0.url}}" alt="Album Cover" class="rounded">
                                    </a>
                                </div>
                                <div class="song-info">
                                    <h1 class="song-name mb-1">{{this.name}}</h1>
                                    <h5 class="artist-name mb-1">{{this.album.artists.0.name}}</h5>
                                    <p class="album-title mb-0">{{this.album.name}}</p>
                                </div>
                            </div>

                            <!-- Right Section: Duration & Favorite Button -->
                            <div class="d-flex align-items-center">
                                <div class="duration text-muted me-3">
                                    <span>{{this.min}}:{{this.padding}}{{this.sec}}</span>
                                </div>
                                <iframe name="votar" style="display:none"></iframe>
                                <form method="post" action="/favorite" target="votar">
                                    <input class="favorite-button btn btn-outline-light" type="submit" value="Favorite" />
                                    <input type="hidden" name="song_id" value="{{this.id}}">
                                    <input type="hidden" name="song_name" value="{{this.name}}">
                                    <input type="hidden" name="artist_name" value="{{this.album.artists.0.name}}">
                                    <input type="hidden" name="album_name" value="{{this.album.name}}">
                                    <input type="hidden" name="album_url" value="{{this.album.images.0.url}}">
                                    <input type="hidden" name="song_duration"
                                        value="{{this.min}}:{{this.padding}}{{this.sec}}">
                                </form>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/if}}

            <!-- Song Recommendations -->
            {{#if spotReccomendedSongs}}
            <div class="col-md-5">
                <h1 class="text-white mb-4">You may also like...</h1>
                <div class="d-flex flex-wrap">
                    {{#each spotReccomendedSongs}}   
                    <div class="card song-result mb-3 p-3 col-12 col-md-5 me-3">
                        <div class="d-flex align-items-center">
                            <div class="album-cover me-3">
                                <a href="{{this.uri}}">
                                    <img src="{{this.album.images.0.url}}" alt="Album Cover" class="rounded">
                                </a>
                            </div>
                            <div class="song-info flex-grow-1">
                                <h1 class="song-name mb-1">{{this.name}}</h1>
                                <h5 class="artist-name mb-1">{{this.album.artists.0.name}}</h5>
                                <p class="album-title mb-0">{{this.album.name}}</p>
                            </div>
                            <div class="duration ms-3 text-muted">
                                <span>{{this.min}}:{{this.padding}}{{this.sec}}</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <div class="duration text-muted me-3">
                                    <span>{{this.min}}:{{this.padding}}{{this.sec}}</span>
                                </div>
                                <iframe name="votar" style="display:none"></iframe>
                                <form method="post" action="/favorite" target="votar">
                                    <input class="favorite-button btn btn-outline-light" type="submit" value="Favorite" />
                                    <input type="hidden" name="song_id" value="{{this.id}}">
                                    <input type="hidden" name="song_name" value="{{this.name}}">
                                    <input type="hidden" name="artist_name" value="{{this.album.artists.0.name}}">
                                    <input type="hidden" name="album_name" value="{{this.album.name}}">
                                    <input type="hidden" name="album_url" value="{{this.album.images.0.url}}">
                                    <input type="hidden" name="song_duration"
                                        value="{{this.min}}:{{this.padding}}{{this.sec}}">
                                </form>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</body>

</html>
