<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style_search.css">
</head>
<body>
    <div class="search-container">
        <!-- Search for Artists -->
        <div class="search-section">
            <h1 class="search-title" style="color: #ffffff;">Search for Artists</h1>
            <form method="GET" action="/searchArtist" class="search-form">
                <input type="text" name="artist" class="search-bar" placeholder="Search for an artist...">
                <button type="submit" class="search-button">Search</button>
            </form>
        </div>

        <!-- Search for Songs -->
        <div class="search-section">
            <h1 class="search-title" style="color: #ffffff;">Search for Songs</h1>
            <form method="GET" action="/song" class="search-form">
                <input type="text" name="song" class="search-bar" placeholder="Search for a song...">
                <button type="submit" class="search-button">Search</button>
            </form>
        </div>
    </div>

    <!-- Artist Info -->
    {{#if artist}}
        <div class="artist-info text-center mt-4">
            <h1 class="artist-name">{{artist.name}}</h1>
            <h3 style="color:#ffffff;">Followers: {{artist.followers.total}}</h3>
            <div>
                <img src="{{artist.images.0.url}}" alt="Artist Cover" width="500" height="500"/>
            </div>
        </div>
    {{/if}}

    <!-- Song Results -->
    {{#if fiveSongs}}
    <div class="container">
        <table>
            {{#each fiveSongs}}   
                <tr>
                    <td>
                        <div class="card song-result mb-3 p-3">
                            <div class="d-flex align-items-center">
                                <div class="album-cover me-3">
                                    <a href="{{this.uri}}">
                                        <img src="{{this.album.images.0.url}}" alt="Album Cover" class="rounded">
                                    </a>
                                </div>
                                
                                <div class="song-info flex-grow-1">
                                    <h1 class="song-name mb-1">{{this.name}}</h1>
                                    <h5 class="artist-name mb-1">{{this.album.artists.0.name}}</h5>
                                    <p class="album-title mb-0">{{this.album.name}}</p>
                                </div>
                                
                                <div class="duration ms-3 text-muted">
                                    <span>Duration: {{this.min}}:{{this.padding}}{{this.sec}}</span>
                                </div>                   
                            </div>
                        </div>
                    </td>
                    <td> 
                        <form method="post" action="/favorite"> 
                            {{#if favorited}}
                            <input class="favorite-button" id="button" type="submit" disabled="disabled" value="Favorite" style="background-color:#7c7e81;" /> 
                            <input type="hidden" name="course_id" value=""/>
                            {{else}}
                            <input class="favorite-button" id="button" type="submit" value="Favorite"/> 
                            <input type="hidden" name="course_id" value=""/>
                            {{/if}} 
                        </form>
                    </td>
                </tr>
            {{/each}}
        </table>
    </div>
{{/if}}

</body>
</html>
