<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark w-100 py-3">
    <div class="container-fluid">
      <!-- Brand Logo -->
      <a class="navbar-brand text-light" href="/" style="font-size: 1.5rem; font-weight: 700;">
      </a>

      <!-- Navbar Links -->
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <!-- Home Button -->
            <a href="/home" class="btn btn-outline-light me-3 px-4 py-2" style="font-size: 1.1rem; font-weight: 600; border-width: 2px;">Home</a>
          </li>
          <li class="nav-item">
            <!-- Fav button -->
            <a href="/favorites" class="btn btn-danger px-4 py-2" style="font-size: 1.1rem; font-weight: 600; border-width: 2px;">Favorite Songs</a>
          </li>
          <li class="nav-item">
            <!-- Log Out Button -->
            <a href="/logout" class="btn btn-danger px-4 py-2" style="font-size: 1.1rem; font-weight: 600; border-width: 2px;">Log Out</a>
          </li>
        </ul>
      </div>

      <!-- User Profile -->
      {{#if user.logged_in}}
      <div class="d-flex">
        <form action="/profile" method="get" class="d-inline">
          <button type="submit" class="btn btn-primary px-4 py-2" style="font-size: 1.1rem; font-weight: 600; border-width: 2px;">
            {{ user.username }}
          </button>
        </form>
      </div>
      {{/if}}
    </div>
  </nav>
</header>
